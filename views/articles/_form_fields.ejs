<div class="container mt-5">
  <div class="card shadow p-4">
      <form>
          <div class="mb-3">
              <label for="title" class="form-label fw-bold">Title</label>
              <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
          </div>
          <div class="mb-3">
              <label for="description" class="form-label fw-bold">Description</label>
              <textarea name="description" id="description" class="form-control" rows="3"><%= article.description %></textarea>
          </div>
          <div class="mb-3">
              <label for="markdown" class="form-label fw-bold">Markdown</label>
              <textarea required name="markdown" id="markdown" class="form-control" rows="5"><%= article.markdown %></textarea>
          </div>

          <div class="d-flex justify-content-between">
              <a href="/" id="button" class="btn btn-secondary">Cancel</a>
              <button type="submit" id="button" class="btn btn-primary">Save</button>
          </div>
      </form>
  </div>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
